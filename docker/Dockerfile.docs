FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        git \
        make \
        python3 \
        python3-pip \
    && dnf clean all

COPY . /music-box/

WORKDIR /music-box

RUN pip3 install -e .

ARG SUFFIX=""
ENV SWITCHER_SUFFIX=$SUFFIX

RUN echo "The suffix is '$SWITCHER_SUFFIX'"

RUN cd docs \
    && pip install -r requirements.txt \
    && make html