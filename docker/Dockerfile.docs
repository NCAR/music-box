FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        git \
        gcc \
        gcc-c++ \
        gfortran \
        lapack-devel \
        make \
        netcdf-fortran-devel \
        pandoc \
        python3-devel \
        python3-pip \
    && dnf clean all

COPY . /music-box/

WORKDIR /music-box


RUN pip3 install -e .

ARG SUFFIX=""
ENV SWITCHER_SUFFIX=$SUFFIX

RUN echo "The suffix is '$SWITCHER_SUFFIX'"

RUN cd docs \
    && pip install -r requirements.txt \
    && pip install --upgrade pip ipython ipykernel \
    && make html

