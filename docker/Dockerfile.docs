FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        git \
        gcc \
        gcc-c++ \
        gfortran \
        lapack-devel \
        make \
        netcdf-fortran-devel \
        pandoc \
        python3-devel \
        python3-pip \
    && dnf clean all

COPY . /music-box/

WORKDIR /music-box

RUN pip3 install -e .

RUN cd docs \
    && pip install -r requirements.txt \
    && make html

